{
    "files.associations": {
    },
    "files.exclude": {
        "rtl/*.v.bak": true,
        "rtl/*.sv.bak": true,
        "rtl/*.out": true,
        "rtl/*.vcd": true,
        "rtl/db/**": true,
        "rtl/incremental_db/**": true,
        "rtl/output_files/**": true
    },
    // Disable UI that would attempt to launch Pico binary on host machine.
    "cmake.statusbar.advanced": {
        "debug": { "visibility": "hidden" },
        "launch": { "visibility": "hidden" },
        "build": { "visibility": "hidden" },
        "buildTarget": { "visibility": "hidden" }
    },
    "cmake.buildBeforeRun": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "verilog.linting.linter": "iverilog",
    "verilog.linting.iverilog.arguments": "-g2009",
    "cSpell.words": [
        "Picoprobe",
        "unsynchronized"
    ],
    "editor.detectIndentation": false,
    "cmake.configureOnOpen": false
}